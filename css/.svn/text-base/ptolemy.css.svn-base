html, body, #map-canvas {
  height: 100%;
  margin: 0px;
  padding: 0px;
  width: auto;
  overflow: auto;
}

#ptolemy-container {
  width:auto;
  height: 100%;
  overflow: scroll;
}

#map-canvas {
  width: auto;
}

#directions-panel {
  height: 100%;
  float: right;
  width: 20%;
  border: 1px solid;
  padding: 2px;
  overflow: auto;
}

#my-schedule {
  height: 100%;
  float: right;
  width: 18%;
  border-left: 1px solid;
  overflow: auto;
}

#my-schedule select {
  background: white;
  width: 90%;
  border-top: 0;
  border-left: 0;
  border-right: 0;
}

#driving-panel {
  height: auto;
  width: auto;
  overflow: auto;
}

#walking-panel {
  height: auto;
  width: auto;
  overflow: auto;
}

#control {
  width: auto;
  margin-top: 5%;
  padding: 1%;
  font-size: 14px;
  color: black;
  background: white;
  font-family: Arial;
  border: 1px solid #ccc;
  text-align: left;
  box-shadow: 0 2px 2px rgba(33, 33, 33, 0.4);
}

#control #start {
	border-top: 0 none;
	border-left: 0 none;
	border-right: 0 none;
	border-bottom: 1px solid;
	width: 75%;
	font-size: 14px;
}

#control #end {
	border-top: 0 none;
	border-left: 0 none;
	border-right: 0 none;
	border-bottom: 1px solid;
	width: 75%;
	background: white;
	font-size: 14px;
}